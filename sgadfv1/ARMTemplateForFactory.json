							{
								"activity": "Get Latest CDC",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30
						},
						"userProperties": [],
						"typeProperties": {
							"notebookPath": "/Repos/24huda.zaidi@fostiima.org/DE-Singapore-Companies-DB/Pyspark_Notebooks/ADF_and_Databricks/Get Count and Write in Staging",
							"baseParameters": {
								"catalog": {
									"value": "@pipeline().parameters.src_catalog",
									"type": "Expression"
								},
								"schema": {
									"value": "@pipeline().parameters.src_schema",
									"type": "Expression"
								},
								"table": {
									"value": "@pipeline().parameters.src_table",
									"type": "Expression"
								},
								"last_cdc": {
									"value": "@activity('Get Latest CDC').output.value[0].cdc",
									"type": "Expression"
								},
								"cdc_column": {
									"value": "@pipeline().parameters.cdc_column",
									"type": "Expression"
								},
								"staging_path": {
									"value": "@pipeline().parameters.staging_path",
									"type": "Expression"
								}
							}
						},
						"linkedServiceName": {
							"referenceName": "sg_databricks_ls",
							"type": "LinkedServiceReference"
						}
					},
