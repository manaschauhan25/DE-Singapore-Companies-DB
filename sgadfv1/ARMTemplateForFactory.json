							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "JsonSource",
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								}
							},
							"dataset": {
								"referenceName": "cdc_json_df",
								"type": "DatasetReference",
								"parameters": {
									"container": {
										"value": "@pipeline().parameters.cdc_container",
										"type": "Expression"
									},
									"directory": {
										"value": "@pipeline().parameters.cdc_directory",
										"type": "Expression"
									},
									"file": "cdc.json"
								}
							},
							"firstRowOnly": false
						}
					},
